<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>

        a {
            color: white;
        }

            a:link {
                text-decoration: none;
            }

            a:visited {
                text-decoration: none;
            }

            a:hover {
                text-decoration: underline;
            }

            a:active {
                text-decoration: underline;
            }

        body {
            padding: 0;
            margin: 0;
            background-color: gray;
        }

        .mainBackground {
            padding: 0px;
            background-color: #747477;
        }

        .menuBackground {
            background-color: #c0b37c;
            width: 100vw;
        }

        .contentContainer {
            padding: 5%;
            margin-left: 10vw;
            margin-right: 10vw;
            background-color: green;
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            grid-column-gap: 3vw;
            grid-row-gap: 3vh;
            width: 80vw;
        }

        .contentItem {
            background-color: lightgreen;
            padding: 5%;
            border-radius: 25px;
        }

        .container {
            padding-top: 0px;
            padding-bottom: 0px;
            padding-left: 0px;
            padding-right: 0px;
            margin-top: 0px;
            margin-left: 0px;
            margin-right: 0px;
            margin-bottom: 0px;
            text-align: center;
            color: white;
            position: relative;
            background-repeat: no-repeat;
            background-size: contain;
            width: 100vw;
            height: 100vh;
        }

        .Sign_left_big {
            position: absolute;
            top: 59vh;
            left: 4vw;
        }

        .Sign_left_small {
            position: absolute;
            top: 38vh;
            left: 28vw;
        }

        .Sign_right_big {
            position: absolute;
            top: 59vh;
            left: 75vw;
            width: 19vw;
            height: 21vh;
            object-fit: cover;
        }

        .Sign_right_small {
            position: absolute;
            top: 43vh;
            left: 62vw;
        }

        .textFont {
            font-family: 'Cooper Std';
            font-size: 30px;
            letter-spacing: 3px;
        }

        #myMap {
            position: absolute;
            top: 59vh;
            left: 3vw;
            object-fit: cover;
        }

        #directionsItinerary {
            background-color: white;
            left: 3vw;
            bottom: 6vh;
            position: absolute;
        }
    </style>

</head>
<body>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
